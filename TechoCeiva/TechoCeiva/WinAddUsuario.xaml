<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="TechoCeiva.WinAddUsuario"
	x:Name="Window"
	Title="Añadir Usuario"
	Width="655" Height="480" Loaded="Window_Loaded" Background="#FFC4C2C2">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Simple Styles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>

	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Label x:Name="lblNombres" Content="Nombre de usuario:" HorizontalAlignment="Left" Height="22" Margin="23,200,0,0" Style="{DynamicResource SimpleLabel}" VerticalAlignment="Top" Width="139" FontSize="14.667"/>
		<Label x:Name="lblApellidos" Content="Voluntario:" Height="22" Margin="23,29,491,0" Style="{DynamicResource SimpleLabel}" VerticalAlignment="Top" FontSize="14.667"/>
		<Label x:Name="lblTelefono" Content="Contraseña:" HorizontalAlignment="Left" Height="22" Margin="23,268,0,0" Style="{DynamicResource SimpleLabel}" VerticalAlignment="Top" Width="87" FontSize="14.667"/>
        <Label x:Name="lblCorreo" Content="Confirmar contraseña:" HorizontalAlignment="Left" Margin="307,64,0,0" Style="{DynamicResource SimpleLabel}" Width="155" Height="22" VerticalAlignment="Top" FontSize="14.667" d:LayoutOverrides="VerticalAlignment"/>
        <ComboBox x:Name="cmbTipo" Margin="307,154,106,0" Style="{DynamicResource SimpleComboBox}" FontSize="14.667" Height="26.5" VerticalAlignment="Top" Width="220" />
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="26.5" Margin="23,228,0,0" Style="{DynamicResource SimpleTextBox}" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="14.667" TextAlignment="Center" IsEnabled="True" Text="" />
        <Button Content="Guardar" Height="36" Margin="23,0,0,43" Style="{DynamicResource SimpleButton}" VerticalAlignment="Bottom" Click="Button_Click" FontSize="12" d:LayoutOverrides="HorizontalAlignment" Name="btnGuardar" Background="#FF0092DD" Foreground="White" HorizontalAlignment="Left" Width="103" />
        <Label Content="Tipo de usuario:" Height="28" HorizontalAlignment="Left" Margin="307,120,0,0" Name="label1" VerticalAlignment="Top" FontSize="15" />
        <PasswordBox Height="27" HorizontalAlignment="Left" Margin="23,296,0,0" Name="pswPassword" VerticalAlignment="Top" Width="220" IsEnabled="True" />
        <PasswordBox Height="26" HorizontalAlignment="Left" Margin="307,91,0,0" Name="pswPassworConfirm" VerticalAlignment="Top" Width="220" />
        <ListBox Height="128" HorizontalAlignment="Left" Margin="23,54,0,0" Name="lstVoluntarios" VerticalAlignment="Top" Width="207" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="307,223,0,0" Name="cmbPregunta" VerticalAlignment="Top" Width="221" IsEditable="True"></ComboBox>
        <TextBox Height="27" HorizontalAlignment="Left" Margin="307,296,0,0" Name="txtRespuesta" VerticalAlignment="Top" Width="221" Text="" />
        <Label Content="Pregunta secreta:" FontSize="14.667" Height="22" HorizontalAlignment="Left" Margin="307,195,0,0" Name="label3" Style="{DynamicResource SimpleLabel}" VerticalAlignment="Top" Width="139" />
        <Label Content="Respuesta:" FontSize="14.667" Height="22" HorizontalAlignment="Left" Margin="307,268,0,0" Name="label4" Style="{DynamicResource SimpleLabel}" VerticalAlignment="Top" Width="139" />
        <Button Content="Cancelar" FontSize="14.667" Height="36" Margin="140,0,390,43" Name="button1" Style="{DynamicResource SimpleButton}" VerticalAlignment="Bottom" Foreground="White" Background="#FFC52023" />
    </Grid>
</Window>